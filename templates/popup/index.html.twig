{% extends 'base.html.twig' %}

{% block title %}popup{% endblock %}

{% block body %}
    <div class="row text-center">
        <h2>Cr√©er un lieu</h2>
    </div>
    <input type="hidden" id="data" value="{{lieu.id}}-{{lieu.nom}}">    
    <div class="row">
        <div class="col-8 offset-2">
        
            {{form(form)}}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        //return CloseMySelf(this);
        const hiddenNode = document.querySelector("#data");
        CloseMySelf()
        function CloseMySelf() {     
            if(hiddenNode.value.length>1){
                console.log(hiddenNode.value);
                try {
                    window.opener.HandlePopupResult(hiddenNode.value);
                }
                catch (err) {}
                window.close();
                return false;
            }   
        }        
    </script>
{% endblock %}